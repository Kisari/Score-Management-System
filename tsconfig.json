{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "rootDir": "./src",
    "outDir": "./build"
  },
  "include": ["src/**/*"],   // Only include backend files
  "exclude": ["node_modules", "frontend/**/*"] // Exclude frontend entirely
}
