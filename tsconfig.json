{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "rootDir": ".",  // Change rootDir to the root of the project
    "baseUrl": ".",   // This helps TypeScript resolve paths correctly
    "paths": {
      "@frontend/*": ["frontend/*"]  // Optional: Add alias if necessary
    }
  },
  "include": [
    "src/**/*",        // Include all files in 'src'
    "frontend/**/*"    // Include files in 'frontend'
  ]
}
